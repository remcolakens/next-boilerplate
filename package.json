		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.5.1",
		"@types/jest": "29.5.5",
		"@types/node": "^18.18.1",
		"@types/react": "^18.2.24",
		"@types/react-dom": "^18.2.8",
		"@types/testing-library__jest-dom": "5.14.9",
