{
	"name": "next-boilerplate",
	"version": "3.2.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"commit": "git add . && cz",
		"clean": "rimraf node_modules .next .swc e2e/{report,test-results}",
		"dev": "next dev",
		"format": "prettier --write .",
		"generate:svg": "pnpm svgr ./app/svgs/src",
		"generate:component": "pnpm shadcn-ui add",
		"generate": "generate",
		"lint:eslint": "next lint",
		"lint:typescript": "tsc --noEmit",
		"lint": "pnpm lint:typescript && pnpm lint:eslint",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky",
		"release": "semantic-release",
		"start": "next start",
		"test:ci": "jest --ci",
		"test:update": "jest --ci -u",
		"test": "jest",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/cz-commitlint": "^19.4.0",
		"@playwright/test": "^1.46.1",
		"@remcolakens/simple-component-generator": "^1.0.5",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@svgr/cli": "^8.1.0",
		"@testing-library/jest-dom": "^6.4.8",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/jest": "29.5.12",
		"@types/node": "^20.16.0",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^8.1.0",
		"@typescript-eslint/parser": "^8.1.0",
		"autoprefixer": "^10.4.20",
		"babel-jest": "^29.7.0",
		"commitizen": "^4.3.0",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.2.5",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "5.2.1",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"eslint-plugin-testing-library": "^6.3.0",
		"husky": "^9.1.4",
		"inquirer": "10.1.8",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.2.9",
		"postcss": "^8.4.41",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.0.0",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"rimraf": "^6.0.1",
		"semantic-release": "^23.1.1",
		"shadcn-ui": "^0.8.0",
		"tailwindcss": "^3.4.10",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"lucide-react": "^0.428.0",
		"next": "^14.2.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-use": "^17.5.1",
		"tailwind-merge": "^2.5.2",
		"tailwindcss-animate": "^1.0.7"
	},
	"engines": {
		"node": ">=v20"
	},
	"packageManager": "pnpm@9.7.1"
}
